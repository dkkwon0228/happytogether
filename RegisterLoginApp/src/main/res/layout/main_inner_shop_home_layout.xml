<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


  <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="266dp"
                  android:background="@drawable/main_shop_bg"
                  android:gravity="center_horizontal" android:layout_marginTop="0dp">

    <!--
    <ImageView android:layout_width="132dp" android:layout_height="wrap_content"
               android:src="@drawable/main_shop_title"
               android:id="@+id/shoptitle" android:layout_centerHorizontal="true"
               android:layout_marginTop="4dp"/>
    <TextView
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="쿠폰을 발행해 보세요"
        android:id="@+id/textView7"
        android:layout_below="@+id/shoptitle" android:gravity="center_horizontal"
        android:textColor="#ffffff" android:textSize="10dp" android:layout_centerHorizontal="true"/>
    -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvshopName"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_centerHorizontal="true" android:layout_marginTop="16dp"/>


    <ImageView android:layout_width="132dp" android:layout_height="120dp"
               android:src="@drawable/main_shop_big_icon"
               android:id="@+id/ivShopBigIcon"
               android:layout_below="@+id/tvshopName" android:layout_centerHorizontal="true"/>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivShopBigIcon"
                    android:id="@+id/shopRL" android:layout_marginTop="-5dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="54"
          android:id="@+id/tvTodayCouponCount"
          android:textColor="#ffffff" android:textSize="34dp"
          android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
          android:layout_marginLeft="22dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_toRightOf="@+id/tvTodayCouponCount"
          android:layout_height="wrap_content"
          android:text="명이 쿠폰을 받았습니다"
          android:id="@+id/tvTodayCouponMent"
          android:textColor="#ffffff" android:textSize="14sp"
          android:layout_marginTop="16dp" android:layout_marginLeft="4dp"
          android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
      />

    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopRL"
                    android:id="@+id/shopRL123" android:layout_marginTop="-10dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="8"
          android:id="@+id/tvTodayReplyCount"
          android:textColor="#ffffff" android:textSize="34dp"
          android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
          android:layout_marginLeft="22dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_toRightOf="@+id/tvTodayReplyCount"
          android:layout_height="wrap_content"
          android:text="개의 댓글이 달렸습니다"
          android:id="@+id/tvTodayReplyMent"
          android:textColor="#ffffff" android:textSize="14sp"
          android:layout_marginTop="16dp" android:layout_marginLeft="4dp"
          android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
      />

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopRL123"
                    android:gravity="left" android:layout_alignParentBottom="false">

      <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:src="@drawable/mylocation_ment"
                 android:id="@+id/ivCurrentLocationIcon"
                 android:layout_marginTop="4dp"
                 android:layout_centerHorizontal="true" android:layout_marginLeft="22dp"/>




      <TextView
          android:layout_width="wrap_content"
          android:layout_toRightOf="@+id/ivCurrentLocationIcon"
          android:layout_height="wrap_content"
          android:id="@+id/tvFullShopAddress"
          android:textColor="#ffffff" android:textSize="12dp"
          android:layout_alignParentLeft="false" android:layout_alignParentBottom="false"
          android:layout_marginTop="2dp" android:layout_marginLeft="4dp"
          android:layout_marginBottom="4dp"/>

    </RelativeLayout>


  </RelativeLayout>


</LinearLayout>
