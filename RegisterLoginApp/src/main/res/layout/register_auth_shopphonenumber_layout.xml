<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context=".RegisterMyLocation.RegisterMyLocationActivity">

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="@color/colorRegisterBarBg"
          app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/toolbar_backIcon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:src="@drawable/ic_keyboard_arrow_left_gray_24dp"/>

          <TextView
              android:id="@+id/toolbar_backString"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="@string/action_back"
              android:textColor="#a2a2a2"
              android:textSize="16dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_titleSting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mem_regist"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"/>

      </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <!-- Login progress -->


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/view"
        android:isScrollContainer="false">

      <!--
          스크롤뷰에 포함되지 않은 버튼 레이아웃이
          키보드가 팝업될때 말려 올라 가는 것을 방지 하기 위해
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          추가.
       -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:focusable="true"
          android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:background="#f1f1f1">


          <ImageView
              android:id="@+id/ivCouponImg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="44dp"
              android:src="@drawable/shop_center_big"/>

          <TextView
              android:id="@+id/textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ivCouponImg"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="40dp"
              android:text="@string/regMent4_1"
              android:textColor="@color/colorInfoMessage"
              android:textSize="@dimen/fontsize_ment_middle"/>

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textView"
              android:layout_centerHorizontal="true"
              android:text="@string/regMent4_2"
              android:textColor="@color/colorInfoMessage"
              android:textSize="@dimen/fontsize_ment_middle"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="28dp"
              android:layout_marginTop="20dp"
              android:src="@drawable/ic_info_outline_blue_24dp"/>

          <TextView
              android:id="@+id/textView3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="28dp"
              android:layout_marginTop="23dp"
              android:text="@string/regMent_Confirm_ShopPhoneNumber"
              android:textColor="@color/colorPrimary"
              android:textSize="@dimen/fontsize_ment_small"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="0dp"
            android:text="@string/regMent_Confirm_ShopPhoneNumber2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontsize_ment_small"
            android:layout_below="@+id/linearLayout"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="0dp"
            android:text="@string/regMent_Confirm_ShopPhoneNumber3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontsize_ment_small"
            android:layout_below="@+id/textView4"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="8dp"
            android:text="@string/regMent_Confirm_ShopPhoneNumber4"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontsize_ment_small"
            android:layout_below="@+id/textView5"/>

        <!--
            스크롤뷰에 포함되지 않은 버튼 레이아웃이
            키보드가 팝업될때 말려 올라 가는 것을 방지 하기 위해
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            추가.

            AndroidManifest 에도 android:windowSoftInputMode="adjustPan" 추가
         -->

        <FrameLayout
            android:id="@+id/framelayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="16dp">

          <!--
              android:textColorHint="@color/colorHint"
              AutoCompleteTextView hint Color 해당뷰가 아니라
              부모뷰에서 정의해야 한다.
           -->
          <!--
          <android.support.design.widget.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="28dp"
              android:id="@+id/view0"
              android:layout_toLeftOf="@+id/textView4"
              android:layout_toStartOf="@+id/textView4"
              android:textColorHint="@color/colorHint"
              android:layout_marginRight="28dp">

            <EditText
                android:id="@+id/etRegisterAddressSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_search_address"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:inputType="text"
                android:textStyle="bold"
                android:maxLength="20"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorHint"
                android:imeOptions="actionSearch"/>
          </android.support.design.widget.TextInputLayout>
        -->
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/framelayout2222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framelayout0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

          <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/view567"
                          android:layout_marginLeft="28dp"
                          android:layout_marginRight="28dp"
                          android:orientation="horizontal" android:gravity="fill_horizontal|fill_vertical">

            <!--
                AutoCompleteTextView hint Color 해당뷰가 아니라
                부모뷰에서 정의해야 한다.
            -->

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" android:textColor="#000000"
                android:gravity="center_vertical|center_horizontal"/>




          </RelativeLayout>

          <TextView
              android:id="@+id/tvShopPhoneNumber"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textSize="24sp" android:textColor="#000000"
              android:layout_below="@+id/view567"
              android:layout_marginLeft="28dp" android:layout_marginRight="28dp"
              android:layout_marginTop="10dp" android:gravity="center_vertical|center_horizontal"
          />

          <TextView
              android:id="@+id/tvConfirmIncommingCallNumber"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tvShopPhoneNumber"
              android:layout_marginLeft="28dp"
              android:layout_marginRight="28dp"
              android:layout_marginTop="10dp" android:gravity="center_vertical|center_horizontal"
          />


        </RelativeLayout>


      </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

      <Button
          android:id="@+id/reg_next_btn_MyLocation"
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_marginLeft="28dp"
          android:layout_marginRight="28dp"
          android:text="@string/action_require_auth_phone"
          android:textColor="#ffffff"
          android:textSize="20sp"
          android:textStyle="bold"
          android:theme="@style/MyButton"
          android:allowUndo="true"/>
    </LinearLayout>
  </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>