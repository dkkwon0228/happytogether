<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:orientation="vertical">


  <LinearLayout
      android:layout_width="304dp"
      android:layout_height="248dp"
      android:background="@android:color/darker_gray"
      android:orientation="vertical"
      android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="1" android:gravity="center_vertical">
      <TextView
          android:id="@+id/error_content"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="#bbbbbb"
          android:textSize="18sp" android:layout_marginLeft="28dp"
          android:layout_marginRight="28dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#f1f1f1">

      <Button
          android:id="@+id/btn_private"
          android:layout_width="151.5dp"
          android:layout_height="48dp"
          android:text="@string/register_coupon_private"
          android:background="#3f51b5"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="#ffffff"
          android:elevation="1dp" android:layout_gravity="left"/>
      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="48dp"
          android:gravity="center"
          android:orientation="horizontal"
          android:background="#f1f1f1"/>

      <Button
          android:id="@+id/btn_open"
          android:layout_width="151.5dp"
          android:layout_height="48dp"
          android:text="@string/register_coupon_nowopen"
          android:background="#3f51b5"
          android:textStyle="bold"
          android:textSize="16sp"
          android:textColor="#ffffff"
          android:elevation="1dp" android:layout_gravity="right"/>

    </LinearLayout>


  </LinearLayout>

</LinearLayout>