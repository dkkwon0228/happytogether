<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:orientation="vertical">

  <com.astuetz.PagerSlidingTabStrip
      android:id="@+id/tabs_shop"
      android:layout_width="match_parent"
      android:layout_height="38dip"
      android:layout_marginTop="0dip"
      android:background="#ff8c20"
      android:textColor="#ffffff"
      app:pstsDividerColor="#FFFFFFFF"
      app:pstsIndicatorColor="#ffad20"
      app:pstsUnderlineColor="#ffad20"/>

  <android.support.v4.view.ViewPager
      android:id="@+id/pager_shop"
      android:layout_width="match_parent"
      android:layout_height="266dp"
      tools:context=".MainShopListingCoupon.CouponShopListingActivity"
      android:layout_marginTop="0dip"
      android:layout_marginBottom="0dip" android:foreground="#ffffff"/>




  <android.support.v4.view.ViewPager
      android:id="@+id/pager_my"
      android:layout_width="match_parent"
      android:layout_height="274dp"
      tools:context=".MainShopListingCoupon.CouponShopListingActivity"
      android:layout_marginTop="0dip"
      android:layout_marginBottom="0dip" android:foreground="#ffffff"/>

  <com.astuetz.PagerSlidingTabStrip
      android:id="@+id/tabs_my"
      android:layout_width="match_parent"
      android:layout_height="38dip"
      android:layout_marginTop="0dip"
      android:background="#20bcff"
      android:textColor="#ffffff"
      app:pstsDividerColor="#FFFFFFFF"
      app:pstsIndicatorColor="#17d6dc"
      app:pstsUnderlineColor="#17d6dc"/>







  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="MAIN ACTIVITY"
      android:layout_gravity="center"/>

  <fragment
      android:id="@+id/place_autocomplete_fragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Place"
      android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="MAIN ACTIVITY"
      android:id="@+id/txtPlaceDetails"
      android:layout_gravity="center"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="장소 추가"
      android:id="@+id/button"
      android:layout_gravity="center_horizontal"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="지도로 보기"
      android:id="@+id/button_viewmap"
      android:layout_gravity="center_horizontal"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="서치"
      android:id="@+id/search" android:layout_gravity="center_horizontal"/>


</LinearLayout>
