<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">





  <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="274dp" android:background="@drawable/main_mycoupon_bg"
                  android:gravity="center_horizontal">



    <ImageView android:layout_width="132dp" android:layout_height="116dp"
               android:src="@drawable/main_mycoupon_big_icon"
               android:id="@+id/ivShopBigIcon2"
               android:layout_marginTop="22dp" android:layout_centerHorizontal="true"/>

    <ImageView android:layout_width="132dp" android:layout_height="wrap_content"
               android:src="@drawable/main_mycoupon_title"
               android:id="@+id/shoptitle2"
               android:layout_below="@+id/ivShopBigIcon2" android:layout_marginTop="8dp"
               android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="쿠폰함 확인"
        android:id="@+id/textView72"
        android:layout_below="@+id/shoptitle2" android:gravity="center_horizontal"
        android:textColor="#ffffff" android:textSize="10dp" android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserId"
        android:layout_below="@+id/textView72" android:gravity="center_horizontal"
        android:textColor="#ffffff" android:textSize="22dp" android:layout_centerHorizontal="true"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUserId"
                    android:gravity="left"
                    android:id="@+id/coufonRL" android:layout_marginTop="4dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="132"
          android:id="@+id/tvTodayCouponMy"
          android:textColor="#ffffff" android:textSize="34dp" android:layout_centerHorizontal="true"
          android:layout_alignParentLeft="false" android:layout_marginLeft="22dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_toRightOf="@+id/tvTodayCouponMy"
          android:layout_height="wrap_content"
          android:text="개의 쿠폰이 떳어요~"
          android:id="@+id/tvTodayCouponMyMent"
          android:textColor="#ffffff" android:textSize="14dp"
          android:layout_alignParentLeft="false" android:layout_alignParentBottom="false"
          android:layout_marginTop="16dp" android:layout_marginLeft="4dp"
          android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coufonRL"
                    android:gravity="left|bottom" android:layout_alignParentBottom="false"
                    android:layout_marginBottom="4dp">

      <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:src="@drawable/mylocation_ment"
                 android:id="@+id/shoptitle12"
                 android:layout_marginTop="4dp"
                 android:layout_centerHorizontal="true" android:layout_marginLeft="22dp"/>




      <TextView
          android:layout_width="wrap_content"
          android:layout_toRightOf="@+id/shoptitle12"
          android:layout_height="wrap_content"
          android:id="@+id/tvFullMyLocation"
          android:textColor="#ffffff" android:textSize="12dp"
          android:layout_alignParentLeft="false" android:layout_alignParentBottom="false"
          android:layout_marginTop="2dp" android:layout_marginLeft="4dp"/>

    </RelativeLayout>


  </RelativeLayout>


</LinearLayout>
