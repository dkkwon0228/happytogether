<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="#FF000000">

  <RelativeLayout
      android:id="@+id/borderviewStikerBorder"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/menuviewStikerBorder"
      android:background="#FF708090"
      android:gravity="center_vertical">

    <!--
      <ImageView
                      android:id="@+id/BorderImageBg"
                      android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:layout_gravity="center"/>
      -->

    <ImageView
        android:id="@+id/BorderImageViewBorderStiker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"/>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/seekbarAndScale_layout"
      android:layout_width="fill_parent"
      android:layout_height="70dp"
      android:layout_above="@+id/border_layout"
      android:visibility="gone">

    <RelativeLayout
        android:id="@+id/icscale0_layout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|center_horizontal">

      <ImageView
          android:id="@+id/ivScale0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="35dp"
          android:adjustViewBounds="true"
          android:scaleType="centerCrop"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seekbar_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="#002F4F4F"
        android:gravity="center_vertical|center_horizontal">

      <com.ilovecat.happytogether.ControllerCropBorderSticker.NumberSeekBar
          android:id="@+id/seekbar_stikerborder"
          android:layout_width="fill_parent"
          android:layout_height="70dp"
          android:layout_centerHorizontal="true"
          android:focusable="false"
          android:max="7"
          android:progressDrawable="@drawable/numberseekbar_background"
          android:thumb="@drawable/thumb_bar"
          android:minHeight="2dip"
          android:maxHeight="2dip"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icscale1_layout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal">

      <ImageView
          android:id="@+id/ivScale1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginRight="10dp"
          android:layout_marginTop="35dp"
          android:adjustViewBounds="true"
          android:scaleType="centerCrop"/>

    </RelativeLayout>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/border_layout"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_above="@+id/menuviewStikerBorder"
      android:layout_gravity="bottom"
      android:background="#002F4F4F"
      android:gravity="center_vertical">

    <HorizontalScrollView
        android:id="@+id/label_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/border_label"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:gravity="center_vertical"
          android:orientation="horizontal">


        <ImageView
            android:id="@+id/button_choose_borderNone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>

        <ImageView
            android:id="@+id/button_choose_grayBorder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_blackBorder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>

        <ImageView
            android:id="@+id/button_choose_orangeBorder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>
        <ImageView
            android:id="@+id/button_choose_imageBorder6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#88ffffff"/>

      </LinearLayout>
    </HorizontalScrollView>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/menuviewStikerBorder"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_gravity="top"
      android:background="#FF333333"
      android:gravity="center_vertical">


    <ImageView android:layout_width="60dp" android:layout_height="50dp"
               android:src="@drawable/ic_close_white"
               android:id="@+id/ivClose"
               android:layout_centerVertical="true" android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_marginLeft="8dp"/>



    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:id="@+id/ivOk"
               android:src="@drawable/ic_check_white"
               android:layout_alignTop="@+id/ivClose" android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true" android:layout_marginRight="19dp"
               android:layout_marginEnd="8dp"/>
    <!--
        <Button
            android:id="@+id/closeStikerBorder"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="15dip"
            android:background="@drawable/btn_blue"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/saveStikerBorder"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_marginTop="15dip"
            android:background="@drawable/btn_blue"
            android:text="적용"
            android:textColor="#ffffff"
            android:textSize="13sp"/>
    -->
  </RelativeLayout>

</RelativeLayout>